<h1>Start Tracking</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@track) do |f| %>
            <%= f.label :Title %>

            <br></br>
            <label for "title">Habit stats</label>
            <br></br>
            <%= f.text_field :date, class: 'form-control' %>
            <br></br>
            <%= f.label :streak %>
            <br></br>
            <%= f.text_field :habit_done, class: 'form-control' %>
            
            <%= f.submit "Begin my habit", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>