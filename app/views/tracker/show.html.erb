<% provide(:title, 'Your Habit') %>

<div class="container-fluid">
<div class="row header-form">
  <div class="col-md-4 col-md-offset-4">
    <h2>Your Habit</h2>
  </div>
</div>  
</div>


<div class="row body-form">
    <div class="col-md-6 col-md-offset-3 " >
      <% if @track.streak >= 21 %>
          <h1>!!!!!!!!!!Congratulations You have Built Your Habit!!!!!!!!!</h1>
          <h2>Completed on <%= Time.now.strftime("%m/%d/%Y") %></h2>
          
      <% else %>

        <h2>Have you done your habit Today? </h2>
        
        <div>  
          <%= link_to 'YES', tracker_increase_streak_path(track_id: @track.id), method: :post , class: "btn btn-lg btn-success" %> 
          <%= link_to 'NO', tracker_reset_streak_path(track_id: @track.id), method: :post, class: "btn btn-lg btn-danger" %>
        </div>  
        
      <% end %>
              <br>
              <p>The Habit created on <h2><%= @track.created_at.strftime("%b %d, %Y") %></h2></p>
              
              <br>
              <p>The Habit is already practised for <h2><%= @track.streak %> days</h2></p><br>
              
              <p>starting from <%= @track.newstart %></p>
              <br>
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (@track.streak.to_f/ 21 * 100).round %>%;">
                  <%= @track.streak %> days
                </div>
              </div>
              
              <p>The Longest streak is <h2><%= @track.compday %> days</h2> </p><br>
              <p>from <%= @track.newstart %> to <%= @track.longdate %></p>
              
              <br>
              <p>You have skip your habit for <h2><%= @track.skipdays %> days</h2></p>
              <br><br>

      <%= link_to 'Back', root_url %>
    
   </div>  
</div>
