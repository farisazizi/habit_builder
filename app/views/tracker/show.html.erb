<% provide(:title, 'Progress') %>

<div class="container-fluid">
<div class="row header-form">
  <div class="col-md-4 col-md-offset-4">
  <h2>Progress of habit</h2>

  </div>
</div>  
</div>

<div class="row body-form">
    <div class="col-md-6 col-md-offset-3 " >
      	<div class="panel panel-warning">
      	  
    		  <div class="panel-heading">
    		    <h3 class="panel-title ">Status</h3>
    		  </div>
    		  
    		  <div class="panel-body">
             <% if @track.streak >= 21 %>
                <h1>!!!!!!!!!!Congratulations You have Built Your Habit!!!!!!!!!</h1>
                <h2>Completed on <%= Time.now.strftime("%m/%d/%Y") %></h2>
                
            <% else %>
              
              <h2 style= "text-align:center">Have you done your habit Today? </h2>
              
              <div style= "text-align:center">  
                <%= link_to 'YES', tracker_increase_streak_path(track_id: @track.id), method: :post , class: "btn btn-lg btn-success" %> 
                <%= link_to 'NO', tracker_reset_streak_path(track_id: @track.id), method: :post, class: "btn btn-lg btn-danger" %>
              </div>  
              
            <% end %>
      		</div>
    		</div> <!-- end panel-->
     
            
        <ul class="list-group">
            <li class="list-group-item">The Habit created on <strong><%= @track.created_at.strftime("%b %d, %Y") %></strong></li>
            <li class="list-group-item">The Habit is already practised for <strong><%= @track.streak %> days</strong></li>
            <li class="list-group-item">Starting from <strong> <%= @track.newstart %></strong>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (@track.streak.to_f/ 21 * 100).round %>%;">
                  <%= @track.streak %> days
                </div>
            </div>
            </li>
            <li class="list-group-item">The Longest streak is <strong><%= @track.compday %></strong> days from <strong><%= @track.newstart %> to <%= @track.longdate %></strong></li>
            <li class="list-group-item">You have skip your habit for <strong><%= @track.skipdays %> </strong>days</li>
      </ul>
              

      <%= link_to 'Back', root_url, class:"btn btn-warning"  %>
    
   </div>  
</div>
