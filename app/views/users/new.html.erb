<% provide(:title, 'Sign up') %>

<div class="container-fluid">
<div class="row header-form">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign up</h2>
  </div>
</div>  
</div>

<div class="row body-form">
  <div class="col-md-6 col-md-offset-3 " >
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <%= f.label :password_confirmation, "Confirmation Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
  
      <br>
      <%= f.submit "Create my account", class: "btn btn-primary btn-success" %>
      <%= button_tag 'Reset', :type => 'reset',class: "btn btn-danger" %>
      <h5>Already have an account? <%= link_to "Login here!", login_path %></h5>
  
    <% end %>
  </div>
</div>
