<p id="notice"><%= notice %></p>

<h1>Listing Habits</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Days practised</th>
      <th>Practise streak</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habits.each do |habit| %>
      <tr>
        <td><%= habit.title %></td>
        <td><%= habit.description %></td>
        <td><%= habit.days_practised %></td>
        <td><%= habit.practise_streak %></td>
        <td><%= habit.done %></td>
        <td><%= link_to 'Show', habit %></td>
        <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
        <td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

