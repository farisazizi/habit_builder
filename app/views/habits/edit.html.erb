<% provide(:title, 'Edit Habit') %>

<div class="container-fluid">
<div class="row header-form">
  <div class="col-md-4 col-md-offset-4">
    <h2>Edit Habit</h2>
  </div>
</div>  
</div>


<div class="row body-form">
    <div class="col-md-6 col-md-offset-3 " >
        <%= form_for(@habit) do |f| %>
            <%= render 'habits/form', f: f %>
            <br></br>
            <%= f.submit "Ready to go !", class: "btn btn-success" %>
            <%= link_to 'Back', root_url, class:"btn btn-warning"  %>
        <% end %>
        
   </div>  
</div>
