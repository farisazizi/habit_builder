
<% if logged_in? %>

 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
 <% end %>
 <br> 
 
 <div class="section group">
 	
		<div class="col span_1_of_2 panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title ">User Info</h3>
		  </div>
		  <div class="panel-body">
      	<%= @user.name %>
      	<br>
      	<%= @user.email %>
      
  		</div>
		</div>
		
		<div class="col span_1_of_2 col-md-3 col-md-offset-3">
  		<button class="btn btn-primary card_habit">
			<span class="glyphicon glyphicon-plus text-center " aria-hidden="true"></span>
			<br>
		    <%= link_to "Add new habit" , newhabit_path %> 
		   </button>
		</div>
</div>


<h1>Listing Habits</h1>

		<div class="collapse" id="collapseExample">
		  <div class="well">
		    Habit Details
		  </div>
		</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habits.each do |habit| %>
      <tr>
        <td><%= habit.habit_title %></td>
        <td><%= link_to 'Show Progress', track_path(habit.id) %></td>
        <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
        <td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>

  <div class="center jumbotron">
    <h1>Welcome to the Habit Builder</h1>
    
    <h2>
      This is the home page!
    </h2>
  
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

<% end %>